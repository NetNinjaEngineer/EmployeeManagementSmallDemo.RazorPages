@page
@model MvcAppDemo.RazorPages.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit";
    var departments = ViewData["Departments"] as IEnumerable<Department>;
    var selectList = new SelectList(departments, );
}

<form method="post">
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Name"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Name" />
        <span asp-validation-for="EmployeeViewModel.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Age"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Age" />
        <span asp-validation-for="EmployeeViewModel.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Address"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Address" />
        <span asp-validation-for="EmployeeViewModel.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Salary"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Salary" />
        <span asp-validation-for="EmployeeViewModel.Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Department"></label>
        <select class="form-control" asp-items="@selectList" asp-for="EmployeeViewModel.DepartmentId">
            <option value="@null">------ Select Department ------</option>
        </select>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.IsActive"></label>
        <input class="form-control" asp-for="EmployeeViewModel.IsActive" />
        <span asp-validation-for="EmployeeViewModel.IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Email"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Email" />
        <span asp-validation-for="EmployeeViewModel.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.PhoneNumber"></label>
        <input class="form-control" asp-for="EmployeeViewModel.PhoneNumber" />
        <span asp-validation-for="EmployeeViewModel.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.HireDate"></label>
        <input class="form-control" asp-for="EmployeeViewModel.HireDate" />
        <span asp-validation-for="EmployeeViewModel.HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="EmployeeViewModel.Image"></label>
        <input class="form-control" asp-for="EmployeeViewModel.Image" />
        <span asp-validation-for="EmployeeViewModel.Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>