@page
@model MvcAppDemo.RazorPages.Pages.Employees.IndexModel
@{
    var department = Model.Employees.Select(x => x.DepartmentId);
}
<a asp-page="Create">Create</a>

@if (Model.Employees.Count() > 0)
{
    <h1>All Employees</h1>
    <br />

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Image)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Name)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Address)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Age)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Department)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().Email)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().PhoneNumber)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().IsActive)</td>
                <td>@Html.DisplayNameFor(d => d.Employees.First().HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    <img class="rounded-circle" height="60" width="60" src="~/Images/@employee.ImageName" alt="@employee.ImageName" />
                </td>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.Age</td>
                <td>@Html.DisplayFor(e => employee.Salary)</td>
                <td>@Html.DisplayFor(e => employee.Department)</td>
                <td>@Html.DisplayFor(e => employee.Email)</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.IsActive</td>
                <td>@employee.HireDate</td>
                <td><a asp-page="Details" class="btn btn-info" asp-route-id="@employee.Id">Details</a></td>
                <td><a asp-page="Edit" class="btn btn-warning" asp-route-id="@employee.Id">Edit</a></td>
                <td><a asp-page="Delete" class="btn btn-danger" onclick="return confirm('Are you sure to delete this selected employee ?!!')" asp-route-id="@employee.Id">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="row mt-3">
        <div class="col-md-3 alert alert-warning">
            <h5>No employees .</h5>
        </div>
    </div>
}