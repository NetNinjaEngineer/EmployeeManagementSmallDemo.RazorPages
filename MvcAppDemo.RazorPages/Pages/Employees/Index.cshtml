@page
@model MvcAppDemo.RazorPages.Pages.Employees.IndexModel
@{
}
<a class="btn btn-primary" asp-page="Create">Create New Employee</a>

@if (Model.Employees.Count() > 0)
{
        <h1>All Employees</h1>
        <br />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(d => d.Employees.First().Name)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>
                        <img class="rounded-circle" height="60" width="60" src="~/Images/@employee.ImageName" alt="@employee.ImageName" />
                    </td>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@Html.DisplayFor(e => employee.Department.DepartmentName)</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>
                @if (employee.IsActive)
                {
                    <i class="fa-solid fa-circle" style="color: green"></i>
                }
                else
                {
                    <i class="fa-solid fa-circle" style="color: red"></i>
                }
                    </td>
                    <td>@employee.HireDate</td>
                </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="mt-5 alert alert-warning">
            <h4>There is no employees !!!</h4>
        </div>
}