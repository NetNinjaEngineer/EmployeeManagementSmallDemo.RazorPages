@page
@model MvcAppDemo.RazorPages.Pages.Departments.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div asp-validation-summary="All"></div>

<h1>Create New Department</h1>

<form method="post">
    <div class="form-group">
        <label class="col-form-label" asp-for="Department.Code"></label>
        <input class="form-control" asp-for="Department.Code" />
        <span asp-validation-for="Department.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Department.DepartmentName"></label>
        <input class="form-control" asp-for="Department.DepartmentName" />
        <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Department.DateOfCreation"></label>
        <input class="form-control" asp-for="Department.DateOfCreation" />
        <span asp-validation-for="Department.DateOfCreation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    
</form>

<div>
    <a asp-page="Index" class="btn btn-light">Back To List</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}