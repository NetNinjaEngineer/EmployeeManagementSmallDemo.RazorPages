@page
@model MvcAppDemo.RazorPages.Pages.Departments.IndexModel
@{
}

<div class="mb-5">
    <a asp-page="Create" class="btn btn-outline-success">Create New Department</a>
</div>

@if(Model.Departments.Count() == 0)
{
    <div class="alert alert-warning"> There is no departments exists yet !!!</div>
}
else
{

    <h1>All Departments</h1>
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Code</td>
                <td>DateOfCreation</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model.Departments)
            {
                <tr>
                    <td>@department.DepartmentName</td>
                    <td>@department.Code</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-page="Details" class="btn btn-info" asp-route-id="@department.Id">Details</a></td>
                    <td><a asp-page="Edit" class="btn btn-warning" asp-route-id="@department.Id">Edit</a></td>
                    <td><a asp-page="Delete" class="btn btn-danger" asp-route-id="@department.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}